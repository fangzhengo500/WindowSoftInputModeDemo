<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test.windowsoftinputmodedemo.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EditText"/>


    <Button
        android:id="@+id/btnStateUnspecified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StateUnspecified"/>


    <Button
        android:id="@+id/btnStateUnchanged"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stateUnchanged"/>

    <Button
        android:id="@+id/btnStateAlwaysHidden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stateAlwaysHidden"/>

    <Button
        android:id="@+id/btnStateVisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stateVisible"/>

    <Button
        android:id="@+id/btnStateAlwaysVisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stateAlwaysVisible"/>

    <Button
        android:id="@+id/btnAdjustUnspecified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adjustUnspecified"/>

    <Button
        android:id="@+id/btnAdjustResize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adjustResize"/>

    <Button
        android:id="@+id/btnAdjustPan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adjustPan"/>
</LinearLayout>
