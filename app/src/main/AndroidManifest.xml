<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.test.windowsoftinputmodedemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <activity
            android:name=".DefaultActivity"/>

        <activity
            android:name=".StateUnspecifiedActivity"
            android:windowSoftInputMode="stateUnspecified"/>

        <activity
            android:name=".StateUnchangedActivity"
            android:windowSoftInputMode="stateUnchanged"/>

        <activity
            android:name=".StateAlwaysHiddenActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity
            android:name=".StateVisibleActivity"
            android:windowSoftInputMode="stateVisible"/>

        <activity
            android:name=".StateAlwaysVisibleActivity"
            android:windowSoftInputMode="stateAlwaysVisible"/>

        <activity
            android:name=".AdjustUnspecifiedActivity"
            android:windowSoftInputMode="adjustUnspecified"/>

        <activity
            android:name=".AdjustResizeActivity"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".AdjustPanActivity"
            android:windowSoftInputMode="adjustPan"/>

    </application>

</manifest>